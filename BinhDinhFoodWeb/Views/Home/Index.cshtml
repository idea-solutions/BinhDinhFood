                                    <div class="feat_text_block">
                                        <div class="price_box">
                                            <span class="new_price">@ViewData["objBannerPrice2"] Đ</span>
                                        </div>
                                    </div>
                                </p>
                                <div class="owl-slide-animated owl-slide-cta"><a class="btn_1" role="button">Thêm vào giỏ hàng</a></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!--/owl-slide-->
        <div class="owl-slide cover">
            <img src="~/content/img/slides/slide_home_3.jpg" />
            <div class="opacity-mask d-flex align-items-center" data-opacity-mask="rgba(255, 255, 255, 0.5)">
                <div class="container">
                    <div class="row justify-content-center justify-content-md-start">
                        <div class="col-lg-12 static">
                            <div class="slide-text text-center black">
                                <h2 class="owl-slide-animated owl-slide-title">@ViewData["objBannerName3"]</h2>
