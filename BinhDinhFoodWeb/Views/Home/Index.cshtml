<div class="container margin_60_35">
    <div class="main_title">
        <h2>Bán chạy</h2>
        <span>Sản phẩm</span>
        <p>Những đặc sản được mua nhiều nhất</p>
    </div>
    <div class="row small-gutters">
        @foreach(var item in Model)
        {
            <div class="col-6 col-md-4 col-xl-3">
                <div class="grid_item">
                    <figure>
                        <span class="ribbon off"> - @Convert.ToDouble(@item.ProductDiscount)%</span>
                        <a href="~/Content/product-detail-1.html">
                            <img class="img-fluid lazy" src="~/Content/img/products/@item.ProductImage" alt="@item.ProductName" style="width: 400px; height: 200px">
                            <img class="img-fluid lazy" src="~/Content/img/products/@item.ProductImage" alt="@item.ProductName" style="width: 400px; height: 200px">
                        </a>
                        <div data-countdown="2022/8/22" class="countdown"></div>
                    </figure>
                    <div class="rating"><i class="icon-star voted"></i><i class="icon-star voted"></i><i class="icon-star voted"></i><i class="icon-star voted"></i><i class="icon-star"></i></div>
                    <a href="~/Content/product-detail-1.html">
                        <h3>@item.ProductName</h3>
                    </a>
                    <div class="price_box">
                        <span class="old_price">@item.ProductPrice.ToString("#,###", cul.NumberFormat) Đ</span>
                        <span class="new_price">@Convert.ToDouble(@item.ProductPrice -(@Convert.ToDouble(@item.ProductPrice) * @Convert.ToDouble(@item.ProductDiscount))).ToString("#,###", cul.NumberFormat) Đ</span>
                    </div>
                    <ul>
                        <li><a href="~/Content/#0" class="tooltip-1" data-toggle="tooltip" data-placement="left" title="Thêm vào yêu thích"><i class="ti-heart"></i><span>Thêm vào yêu thích</span></a></li>
                        <li><a href="~/Content/#0" class="tooltip-1" data-toggle="tooltip" data-placement="left" title="So sánh"><i class="ti-control-shuffle"></i><span>So sánh</span></a></li>
                        <li><a asp-action="AddInCart" asp-controller="Cart" asp-route-id="@item.ProductId" class="tooltip-1" data-toggle="tooltip" data-placement="left" title="Thêm vào giỏ hàng"><i class="ti-shopping-cart"></i><span>Thêm vào giỏ hàng</span></a></li>
                    </ul>
                </div>
                <!-- /grid_item -->
            </div>
        }
    </div>
    <!-- /row -->
</div>
<!-- /container -->

