<div id="carousel-home">
    <div class="owl-carousel owl-theme">
        <div class="owl-slide cover">
            <img src="~/content/img/slides/slide_home_1.jpg" />
            <div class="opacity-mask d-flex align-items-center" data-opacity-mask="rgba(0, 0, 0, 0.5)">
                <div class="container">
                    <div class="row justify-content-center justify-content-md-end">
                        <div class="col-lg-6 static">
                            <div class="slide-text text-right white">
                                <h2 class="owl-slide-animated owl-slide-title">@ViewData["objBannerName1"]</h2>
                                <p class="owl-slide-animated owl-slide-subtitle">
                                    <div class="feat_text_block">
                                        <div class="price_box">
                                            <span class="new_price">@ViewData["objBannerPrice1"] Đ</span>
                                        </div>
                                    </div>
                                </p>
                                <div class="owl-slide-animated owl-slide-cta"><a class="btn_1" role="button">Thêm vào giỏ hàng</a></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!--/owl-slide-->
        <div class="owl-slide cover">
            <img src="~/content/img/slides/slide_home_2.jpg" />
            <div class="opacity-mask d-flex align-items-center" data-opacity-mask="rgba(0, 0, 0, 0.5)">
                <div class="container">
                    <div class="row justify-content-center justify-content-md-start">
