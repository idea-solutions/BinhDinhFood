                                        <div class="price_box">
                                            <span class="new_price">@ViewData["objBannerPrice3"] Đ</span>
                                        </div>
                                    </div>
                                </p>
                                <div class="owl-slide-animated owl-slide-cta"><a class="btn_1" role="button">Thêm vào giỏ hàng</a></div>
                            </div>
