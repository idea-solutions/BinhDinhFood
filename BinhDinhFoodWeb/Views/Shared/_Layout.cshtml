@using BinhDinhFood.Models
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="Ansonika">
    <title>Bình Định Food - Đặc sản Bình Định</title>
    <!-- Favicons-->
    <link rel="shortcut icon" href="~/content/img/logo.ico" type="image/x-icon">
    <link rel="apple-touch-icon" type="image/x-icon" href="~/Content/img/Bình_Định_Food__1_-removebg-preview.png">
    <link rel="apple-touch-icon" type="image/x-icon" sizes="72x72"
          href="~/Content/img/Bình_Định_Food__1_-removebg-preview.png">
    <link rel="apple-touch-icon" type="image/x-icon" sizes="114x114"
          href="~/Content/img/Bình_Định_Food__1_-removebg-preview.png">
    <link rel="apple-touch-icon" type="image/x-icon" sizes="144x144"
          href="~/Content/img/Bình_Định_Food__1_-removebg-preview.png">

    <!-- GOOGLE WEB FONT -->
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700,900&display=swap" rel="stylesheet">

    <!-- BASE CSS -->
    <link href="~/Content/css/bootstrap.custom.min.css" rel="stylesheet">
    <link href="~/Content/css/style.css" rel="stylesheet">
    <link rel="stylesheet" type="text/css" href="~/lib/node-snackbar/snackbar.min.css" />


    <!-- SPECIFIC CSS -->
    <link href="~/Content/css/home_1.css" rel="stylesheet">
    <link href="~/Content/css/cart.css" rel="stylesheet">
    <link href="~/Content/css/listing.css" rel="stylesheet">
    <link href="~/Content/css/checkout.css" rel="stylesheet">
    <link href="~/Content/css/error_track.css" rel="stylesheet">
    <link href="~/Content/css/about.css" rel="stylesheet">
    <link href="~/Content/css/faq.css" rel="stylesheet">
    <link href="~/Content/css/contact.css" rel="stylesheet">
    <link href="~/Content/css/leave_review.css" rel="stylesheet">
    <link href="~/Content/css/blog.css" rel="stylesheet">
    <link href="~/Content/css/product_page.css" rel="stylesheet">


    <!-- YOUR CUSTOM CSS -->
    <link href="~/Content/css/custom.css" rel="stylesheet">

</head>

<body>
    <div id="page">
        <header class="version_1">
            <div class="layer"></div><!-- Mobile menu overlay mask -->
            <div class="main_header">
                <div class="container">
                    <div class="row small-gutters">
                        <div class="col-xl-3 col-lg-3 d-lg-flex align-items-center">
                            <div id="logo">
                                <a asp-action="Index" asp-controller="Home" 
                                    style="color: white; font-size: 20px; font-family: Century Gothic, Arial, Tahoma, Serif;">
                                    <img src="~/Content/img/logo.png" alt="" height="70" width="100">Bình Định <b>Food</b>
                                </a>
                            </div>
                        </div>
                        <nav class="col-xl-6 col-lg-7">
                            <a class="open_close" href="javascript:void(0);">
                                <div class="hamburger hamburger--spin">
                                    <div class="hamburger-box">
                                        <div class="hamburger-inner"></div>
                                    </div>
                                </div>
                            </a>
                            <!-- Mobile menu button -->
                            <div class="main-menu">
                                <div id="header_menu">
                                    <a asp-action="Index" asp-controller="Home">
                                        <img src="~/Content/img/Bình Định Food-black.png" alt="" width="300">
                                    </a>
                                    <a href="javascript:void(0);" class="open_close" id="close_in">
                                        <i class="ti-close"></i>
                                    </a>
                                </div>
                                <ul>
                                    <li class="header_menu">
                                        <a asp-action="Index" asp-controller="Home" class="show-submenu">Trang chủ</a>
                                    </li>
                                    <li class="megamenu submenu">
                                        <a asp-action="Index" asp-controller="Product" class="show-submenu-mega">Sản phẩm</a>
                                        <div class="menu-wrapper">
                                            <div class="row small-gutters">
                                                <div class="col-lg-3">
                                                    <a asp-action="Index" asp-controller="Product">
                                                        <h3>CategoryName</h3>
                                                    </a>
                                                </div>
                                                <div class="col-lg-3 d-xl-block d-lg-block d-md-none d-sm-none d-none">
                                                    <div class="banner_menu">
                                                        <a href="#0">
                                                            <img src="~/Content/img/banner_menu.jpg" width="400" height="550"
                                                                 alt="" class="img-fluid lazy">
                                                        </a>
                                                    </div>
                                                </div>
                                            </div>
                                            <!-- /row -->
                                        </div>
                                        <!-- /menu-wrapper -->
                                    </li>
                                    <li class="submenu">
                                        <a asp-action="Index" asp-controller="Blog">Bài viết</a>
                                    </li>
                                    <li>
                                        <a asp-action="Help" asp-controller="Home">Trợ giúp</a>
                                    </li>
                                    <li>
                                        <a asp-action="About" asp-controller="Home">Về Chúng tôi</a>
                                    </li>
                                </ul>
                            </div>
                            <!--/main-menu -->
                        </nav>
                        <div class="col-xl-3 col-lg-2 d-lg-flex align-items-center justify-content-end text-right">
                            <a class="phone_top" asp-action="Contact" asp-controller="Home">
                                <strong>
                                    <span>Hotline?</span>+84 905.726.748
                                </strong>
                            </a>
                        </div>
                    </div>
                    <!-- /row -->
                </div>
            </div>
            <!-- /main_header -->

            <div class="main_nav Sticky">
                <div class="container">
                    <div class="row small-gutters">
                        <div class="col-xl-3 col-lg-3 col-md-3">
                            <nav class="categories">
                                <ul class="clearfix">
                                    <li>
                                        <span>
                                            <a asp-action="Index" asp-controller="Product">
                                                <span class="hamburger hamburger--spin">
                                                    <span class="hamburger-box">
                                                        <span class="hamburger-inner"></span>
                                                    </span>
                                                </span>
                                                Loại đặc sản
                                            </a>
                                        </span>
                                        <div id="menu">
                                            <ul>
                                                <li>
                                                    <span>
                                                        <a asp-action="SearchByFilter" asp-controller="Product" value="6">item.CategoryName</a>
                                                    </span>
                                                </li>
                                                <li>
                                                    <span>
                                                        <a asp-action="SearchByFilter" asp-controller="Product" value="6">item.CategoryName</a>
                                                    </span>
                                                </li>
                                                <li>
                                                    <span>
                                                        <a asp-action="SearchByFilter" asp-controller="Product" value="6">item.CategoryName</a>
                                                    </span>
                                                </li>
                                            </ul>
                                        </div>
                                    </li>
                                </ul>
                            </nav>
                        </div>
                        <div class="col-xl-6 col-lg-7 col-md-6 d-none d-md-block">
                            <form asp-action="SearchByFilter" asp-controller="Product" asp-name="name">
                                <div class="custom-search-input">
                                    <input type="text" placeholder="Tìm kiếm hơn 1000 sản phẩm" name="name">
                                    <button type="submit"><i class="header-icon_search_custom"></i></button>
                                </div>
                            </form>
                        </div>
                        <div class="col-xl-3 col-lg-2 col-md-3">
                            <ul class="top_tools">
                                <li>
                                    <div class="dropdown dropdown-cart" id="mini-cart">
                                        @await Component.InvokeAsync("MiniCartComponent")
                                    </div>
                                    <!-- /dropdown-cart-->
                                </li>
                                <li>
                                    <a asp-action="Index" asp-controller="Home" class="wishlist"><span>Wishlist</span></a>
                                </li>
                                <li>
                                    <div class="dropdown dropdown-access">
                                        <a asp-action="Index" asp-controller="Home" class="access_link"><span>Tài khoản</span></a>
                                        <div class="dropdown-menu">
                                            @if (User.Identity.IsAuthenticated)
                                            {
                                                {
                                                    <a asp-action="ChangeInfor" asp-controller="User">@User.Claims.FirstOrDefault(x => x.Type == System.Security.Claims.ClaimTypes.Name).Value</a>
                                                    <a asp-action="Logout" asp-controller="User" class="button_inc">Logout</a>
                                                }
                                            }
                                            else
                                            {
                                                <a asp-action="Index" asp-controller="User" class="btn_1">Đăng nhập hoặc đăng ký</a>
                                            }
                                            <ul>
                                                <li>
                                                    <a asp-action="TrackOrder" asp-controller="Cart">
                                                        <i class="ti-truck"></i>Kiểm tra đơn hàng
                                                    </a>
                                                </li>
                                                <li>
                                                    <a asp-action="Order" asp-controller="Cart">
                                                        <i class="ti-package"></i>Đơn hàng của bạn
                                                    </a>
                                                </li>
                                                <li>
                                                    <a asp-action="Index" asp-controller="Home">
                                                        <i class="ti-user"></i>Thông tin tài khoản
                                                    </a>
                                                </li>
                                                <li>
                                                    <a asp-action="Help" asp-controller="Home">
                                                        <i class="ti-help-alt"></i>Trợ giúp và hỏi đáp
                                                    </a>
                                                </li>
                                            </ul>
                                        </div>
                                    </div>
                                    <!-- /dropdown-access-->
                                </li>
                                <li>
                                    <a href="javascript:void(0);" class="btn_search_mob"><span>Tìm kiếm</span></a>
                                </li>
                                <li>
                                    <a href="#menu" class="btn_cat_mob">
                                        <div class="hamburger hamburger--spin" id="hamburger">
                                            <div class="hamburger-box">
                                                <div class="hamburger-inner"></div>
                                            </div>
                                        </div>
                                        Loại đặc sản
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </div>
                    <!-- /row -->
                </div>
                <div class="search_mob_wp">
                    <input type="text" class="form-control" placeholder="Tìm kiếm hơn 1000 sản phẩm">
                    <input type="submit" class="btn_1 full-width" value="Search">
                </div>
                <!-- /search_mobile -->
            </div>
            <!-- /main_nav -->
        </header>
        <!-- /header -->
        <main class="bg_gray">
            @RenderBody()
        </main>
        <!-- /main -->
        <footer class="revealed">
            <div class="container">
                <div class="row">
                    <div class="col-lg-3 col-md-6">
                        <h3 data-target="#collapse_1">Truy cập nhanh</h3>
                        <div class="collapse dont-collapse-sm links" id="collapse_1">
                            <ul>
                                <li><a asp-action="Index" asp-controller="Home">Về chúng tôi</a></li>
                                <li><a asp-action="Index" asp-controller="Home">Faq</a></li>
                                <li><a asp-action="Index" asp-controller="Home">Trợ giúp</a></li>
                                <li><a asp-action="Index" asp-controller="Home">Thông tin tài khoản</a></li>
                                <li><a asp-action="Index" asp-controller="Home">Bài viết</a></li>
                                <li><a asp-action="Index" asp-controller="Home">Liên lạc</a></li>
                            </ul>
                        </div>
                    </div>
                    <div class="col-lg-3 col-md-6">
                        <h3 data-target="#collapse_2">Loại đặc sản</h3>
                        <div class="collapse dont-collapse-sm links" id="collapse_2">
                            <ul>
                                <li><a asp-action="Index" asp-controller="Home">Đồ khô</a></li>
                                <li><a asp-action="Index" asp-controller="Home">Hải sản</a></li>
                                <li><a asp-action="Index" asp-controller="Home">Bánh đặc sản</a></li>
                            </ul>
                        </div>
                    </div>
                    <div class="col-lg-3 col-md-6">
                        <h3 data-target="#collapse_3">Liên lạc</h3>
                        <div class="collapse dont-collapse-sm contacts" id="collapse_3">
                            <ul>
                                <li><i class="ti-home"></i>49/28/4 Lê Văn Hưng/Quy Nhơn<br>Bình Định - Việt Nam</li>
                                <li><i class="ti-headphone-alt"></i>+84 905-726-748</li>
                                <li><i class="ti-email"></i><a href="#0">vothuongtruongnhon2002@gmail.com</a></li>
                            </ul>
                        </div>
                    </div>
                    <div class="col-lg-3 col-md-6">
                        <h3 data-target="#collapse_4">Đăng ký</h3>
                        <div class="collapse dont-collapse-sm" id="collapse_4">
                            <div id="newsletter">
                                <div class="form-group">
                                    <input type="email" name="email_newsletter" id="email_newsletter"
                                           class="form-control" placeholder="Your email">
                                    <button type="submit" id="submit-newsletter"><i class="ti-angle-double-right"></i></button>
                                </div>
                            </div>
                            <div class="follow_us">
                                <h5>Theo dõi</h5>
                                <ul>
                                    <li><a asp-action="Index" asp-controller="Home"><img src="~/Content/img/twitter_icon.svg" alt="" class="lazy"></a></li>
                                    <li><a asp-action="Index" asp-controller="Home"><img src="~/Content/img/facebook_icon.svg" alt="" class="lazy"></a></li>
                                    <li><a asp-action="Index" asp-controller="Home"><img src="~/Content/img/instagram_icon.svg" alt="" class="lazy"></a></li>
                                    <li><a asp-action="Index" asp-controller="Home"><img src="~/Content/img/youtube_icon.svg" alt="" class="lazy"></a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- /row-->
                <hr>
                <div class="row add_bottom_25">
                    <div class="col-lg-6">
                        <ul class="footer-selector clearfix">
                            <li>
                                <div class="styled-select lang-selector">
                                    <select>
                                        <option value="English" selected>English</option>
                                        <option value="French">French</option>
                                        <option value="Spanish">Spanish</option>
                                        <option value="Russian">Russian</option>
                                    </select>
                                </div>
                            </li>
                            <li>
                                <div class="styled-select currency-selector">
                                    <select>
                                        <option value="US Dollars" selected>US Dollars</option>
                                        <option value="Euro">Euro</option>
                                    </select>
                                </div>
                            </li>
                            <li><img src="~/Content/img/cards_all.svg" alt="" width="198" height="30" class="lazy"></li>
                        </ul>
                    </div>
                    <div class="col-lg-6">
                        <ul class="additional_links">
                            <li><a asp-action="Index" asp-controller="Home">Điều khoản và riêng tư</a></li>
                            <li><a asp-action="Index" asp-controller="Home">Luật</a></li>
                            <li><span>© 2022 BinhDinhFood</span></li>
                        </ul>
                    </div>
                </div>
            </div>
        </footer>
        <!--/footer-->
    </div>
    <!-- page -->

    <div id="toTop"></div><!-- Back to top button -->
    <!-- COMMON SCRIPTS -->
    <script src="~/Content/js/common_scripts.min.js"></script>
    <script src="~/Content/js/main.js"></script>

    <!-- SPECIFIC SCRIPTS -->
    <script src="~/Content/js/carousel-home.min.js"></script>
    <script src="~/lib/jquery-ajax-unobtrusive/jquery.unobtrusive-ajax.min.js"></script>
    <script type="text/javascript" src="~/lib/node-snackbar/snackbar.min.js"></script>
    <script src="~/Content/js/carousel_with_thumbs.js"></script>
</body>
</html>