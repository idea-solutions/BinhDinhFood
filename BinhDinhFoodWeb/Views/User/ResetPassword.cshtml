@{
}
<form asp-action="ResetPassword" method="post">
        <input asp-for="CustomerUserName" value="@ViewBag.CustomerUserName" hidden />
        <input asp-for="Token" value="@ViewBag.Token" hidden/>
        <div class="form-group">
            <input asp-for="CustomerPassword" type="password" class="hideShowPassword-wrapper" placeholder="Password*">
        </div>
        <div class="form-group">
            <input asp-for="CustomerConfirmPassword" type="password" class="hideShowPassword-wrapper" placeholder="Confirm Password*">
        </div>
        <p>@ViewBag.Message</p>
    <input type="submit" value="Submit" />
</form>