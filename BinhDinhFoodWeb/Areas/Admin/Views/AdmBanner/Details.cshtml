@model BinhDinhFoodWeb.Models.Banner

@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<div>
    <h4>Banner</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.BannerName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.BannerName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ProductDiscount)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ProductDiscount)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.BannerPrice)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.BannerPrice)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.BannerDescription)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.BannerDescription)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.BannerImage)
        </dt>
        <dd class = "col-sm-10">
            <img width="100" src="~/Content/img/slides/@Html.DisplayFor(model => model.BannerImage)" alt="@Html.DisplayFor(model => model.BannerImage)"/>
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.BannerDateCreated)
        </dt>
        <dd class = "col-sm-10">
            @Model.BannerDateCreated.ToShortDateString()
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.BannerId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
