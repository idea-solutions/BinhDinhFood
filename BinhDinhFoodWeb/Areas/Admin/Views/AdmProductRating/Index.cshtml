@model IEnumerable<BinhDinhFoodWeb.Models.ProductRating>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Stars)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RatingContent)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PRDateCreated)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Product)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Customer)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Stars)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RatingContent)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PRDateCreated)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Product.ProductName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Customer.CustomerPassword)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ProductRatingId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ProductRatingId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ProductRatingId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
